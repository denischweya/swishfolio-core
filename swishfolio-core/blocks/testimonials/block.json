{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "swishfolio-core/testimonials",
	"version": "1.0.0",
	"title": "Testimonials",
	"category": "swishfolio",
	"description": "Display testimonials in a grid or carousel layout.",
	"keywords": [ "testimonials", "reviews", "quotes", "feedback" ],
	"textdomain": "swishfolio-core",
	"attributes": {
		"displayMode": {
			"type": "string",
			"default": "grid"
		},
		"columns": {
			"type": "number",
			"default": 3
		},
		"postsPerPage": {
			"type": "number",
			"default": 6
		},
		"showRating": {
			"type": "boolean",
			"default": true
		},
		"showCompany": {
			"type": "boolean",
			"default": true
		},
		"showAvatar": {
			"type": "boolean",
			"default": true
		},
		"autoplay": {
			"type": "boolean",
			"default": false
		},
		"autoplaySpeed": {
			"type": "number",
			"default": 5000
		}
	},
	"supports": {
		"align": [ "wide", "full" ],
		"html": false,
		"spacing": {
			"margin": true,
			"padding": true
		}
	},
	"editorScript": "file:./build/index.js",
	"editorStyle": "file:./build/index.css",
	"style": "file:./build/style-index.css",
	"viewScript": "file:./build/view.js"
}
