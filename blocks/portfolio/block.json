{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "swishfolio-core/portfolio",
	"version": "1.0.0",
	"title": "Portfolio",
	"category": "swishfolio",
	"description": "Display projects in a dynamic, customizable layout with filtering options.",
	"keywords": [ "portfolio", "projects", "gallery", "work", "grid", "masonry" ],
	"textdomain": "swishfolio-core",
	"attributes": {
		"layout": {
			"type": "string",
			"default": "grid"
		},
		"cardStyle": {
			"type": "string",
			"default": "default"
		},
		"columns": {
			"type": "number",
			"default": 3
		},
		"gap": {
			"type": "number",
			"default": 24
		},
		"postsPerPage": {
			"type": "number",
			"default": 6
		},
		"categories": {
			"type": "array",
			"default": []
		},
		"projectTypes": {
			"type": "array",
			"default": []
		},
		"orderBy": {
			"type": "string",
			"default": "date"
		},
		"order": {
			"type": "string",
			"default": "DESC"
		},
		"showFilters": {
			"type": "boolean",
			"default": false
		},
		"filterTaxonomy": {
			"type": "string",
			"default": "category"
		},
		"showExcerpt": {
			"type": "boolean",
			"default": true
		},
		"showCategory": {
			"type": "boolean",
			"default": true
		},
		"showProjectType": {
			"type": "boolean",
			"default": false
		},
		"showStatus": {
			"type": "boolean",
			"default": false
		},
		"showCompletionDate": {
			"type": "boolean",
			"default": false
		},
		"showSkills": {
			"type": "boolean",
			"default": false
		},
		"showClient": {
			"type": "boolean",
			"default": false
		},
		"showProjectUrl": {
			"type": "boolean",
			"default": false
		},
		"imageAspectRatio": {
			"type": "string",
			"default": "landscape"
		},
		"hoverEffect": {
			"type": "string",
			"default": "lift"
		},
		"showViewButton": {
			"type": "boolean",
			"default": true
		},
		"viewButtonText": {
			"type": "string",
			"default": "View Project"
		}
	},
	"supports": {
		"align": [ "wide", "full" ],
		"html": false,
		"spacing": {
			"margin": true,
			"padding": true
		}
	},
	"editorScript": "file:./build/index.js",
	"editorStyle": "file:./build/index.css",
	"style": "file:./build/style-index.css",
	"viewScript": "file:./build/view.js"
}
