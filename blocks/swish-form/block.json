{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "swishfolio-core/swish-form",
	"version": "1.0.0",
	"title": "Swish Form",
	"category": "swishfolio",
	"icon": "feedback",
	"description": "A flexible form block for contact forms and email subscriptions.",
	"keywords": [ "form", "contact", "email", "subscribe", "newsletter" ],
	"textdomain": "swishfolio-core",
	"attributes": {
		"formId": {
			"type": "string",
			"default": ""
		},
		"formType": {
			"type": "string",
			"default": "contact",
			"enum": [ "contact", "subscription" ]
		},
		"fields": {
			"type": "array",
			"default": []
		},
		"submitButtonText": {
			"type": "string",
			"default": "Submit"
		},
		"successMessage": {
			"type": "string",
			"default": "Thank you for your submission!"
		},
		"errorMessage": {
			"type": "string",
			"default": "Something went wrong. Please try again."
		},
		"recipientEmail": {
			"type": "string",
			"default": ""
		},
		"emailSubject": {
			"type": "string",
			"default": "New Form Submission"
		},
		"espProvider": {
			"type": "string",
			"default": "none",
			"enum": [ "none", "mailchimp", "convertkit", "klaviyo", "activecampaign", "brevo" ]
		},
		"espListId": {
			"type": "string",
			"default": ""
		},
		"enableHoneypot": {
			"type": "boolean",
			"default": true
		}
	},
	"supports": {
		"align": [ "wide", "full" ],
		"html": false,
		"spacing": {
			"margin": true,
			"padding": true
		},
		"color": {
			"background": true,
			"text": true
		}
	},
	"editorScript": "file:./build/index.js",
	"editorStyle": "file:./build/index.css",
	"style": "file:./build/style-index.css",
	"viewScript": "file:./build/view.js",
	"render": "file:./render.php"
}
